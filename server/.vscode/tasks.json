{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C++ program",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-lws2_32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build the active C++ file using MinGW."
    }
  ]
}
